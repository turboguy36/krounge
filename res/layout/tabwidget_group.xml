<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabwidget_group_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<TextView
	        android:id="@+id/tabwidget_group_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:text="@string/tab_name_group"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textSize="15sp" />
	
    <ImageView
        android:id="@+id/tabwidget_group_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tabwidget_group_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:src="@drawable/tab_icon_group"/>    

    <TextView
        android:id="@+id/tabwidget_group_newmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tabwidget_group_icon"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/tabwidget_group_icon"
        android:background="#FF0000"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="12sp" 
        android:visibility="invisible" />

</RelativeLayout>